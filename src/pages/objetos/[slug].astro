---
import Base from '@/layouts/Base.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const objetos = await getCollection('objetos');
  return objetos.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { data } = entry;
---
<Base title={`${data.title} · Química 3`}>
  <main id="contenido" class="mx-auto max-w-3xl px-4 py-8">
    <header class="mb-6">
      <h1 class="text-3xl font-extrabold text-cch-azul">{data.title}</h1>
      {data.summary && <p class="mt-2 text-slate-700">{data.summary}</p>}
      <img src={data.cover} alt="" class="w-full aspect-video object-cover rounded-2xl mt-4" loading="lazy" />
    </header>
    <article class="prose">
      <Content />
    </article>
  </main>
</Base>
